<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fillooow.staticticrtf.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Введите текст"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/symbolsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:layout_marginTop="139dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onSymbolsButtonClick"
        app:layout_constraintHorizontal_bias="0.102" />

    <CheckBox
        android:id="@+id/checkBoxRegisterOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отключить регистр"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="198dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.961" />

    <CheckBox
        android:id="@+id/checkBoxSpacesOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отключить пробелы"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRegisterOff"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.96" />

    <CheckBox
        android:id="@+id/checkBoxMarksOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Учёт лишь букв"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSpacesOff"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
